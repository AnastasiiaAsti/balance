<%- include('../partials/header') %>


<div class="container">
    <div class="text-center"><img src="<%= asana.photosURLs %>" width="500px"></div>
    <div class="m-5 text-right"><a href="/asanas">BACK TO ASANAS</a></div>

    <div class="mt-5 heading">Name: </div>
    <div><%= asana.name %></div>
    <hr>
    <div class="heading">Original Name: </div>
    <div><%= asana.originName %></div>
    <hr>
    <div class="heading">Type: </div>
    <div><%= asana.typeOfAsana %></div>
    <hr>
    <div class="heading">Description: </div>
    <div><%= asana.description %></div>
</div>

<br><br>
<h2>Comments</h2>

<% if(user) { %>
    <div class="container mt-5">
        <form id="add-comment-form" method="POST" action="/asanas/<%= asana._id %>/comments">
            <label>Comment:</label></br>
            <textarea name="content" class="form-control" ></textarea></br>
            <label>Rating:</label>
            <select class="form-control" name="rating">
            <option value="&#9996;">&#9996;</option>
            <option value="&#128525">&#128525</option>
            <option value="&#128293">&#128293</option>
            <option value="&#128529">&#128529</option>
            <option value="&#127798">&#127798</option>
            <option value="&#129327">&#129327</option>
            <option value="&#128149">&#128149</option>
            </select><br>
            <input type="submit" value="Add Comment">
        </form>
    </div>
<% } %>


<% if (asana.comments.length) { %>
    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Date</th>
                <th>Comment</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
        <% let total = 0 %>
        <% asana.comments.forEach(function(r) { %>
            <% total += r.rating %>
            <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
                <% if (user && user._id.equals(r.user)) { %>
                <form action="/asanas/<%= r._id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                <% } %>
            </td>
        </tr>
        <% }); %>
        <tr>
            <td colspan="3"></td>
            <td><strong><%= (total / asana.comments.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
</table>
<% } else { %>
    <h5 class="p-4 m-5">No Comments Yet</h5>
    <% } %>



<%- include('../partials/footer') %>